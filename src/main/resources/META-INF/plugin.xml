<idea-plugin>
	<id>imiatselski.idea_legacy_find_in_files_logic_plugin</id>
	<name>Legacy Find in Files Logic</name>
	<vendor email="imiatselski@gmail.com" url="https://github.com/ALEUT/idea-legacy-find-in-files-logic-plugin">Ivan Miatselski</vendor>

	<!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
		 on how to target different products -->
	<depends>com.intellij.modules.lang</depends>

	<extensions defaultExtensionNs="com.intellij">
		<!-- Add your extensions here -->
	</extensions>

	<actions>
		<action id="imiatselski.FindInFiles.Editor"
				class="imiatselski.idea_legacy_find_in_files_logic_plugin.FindInFilesAction"
				text="Find in Files Using Legacy Logic"
				description="Find in files using legacy logic">
			<add-to-group group-id="EditorPopupMenu" anchor="first"/>
			<add-to-group group-id="Diff.EditorPopupMenu" anchor="first"/>
		</action>
	</actions>

</idea-plugin>