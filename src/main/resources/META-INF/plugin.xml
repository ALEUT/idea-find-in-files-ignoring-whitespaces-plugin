<idea-plugin>
	<id>imiatselski.idea_find_in_files_ignoring_whitespaces_plugin</id>
	<name>Find in Files Ignoring Whitespaces</name>
	<vendor email="imiatselski@gmail.com" url="https://github.com/ALEUT/idea-find-in-files-ignoring-whitespaces-plugin">Ivan Miatselski</vendor>

	<!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
		 on how to target different products -->
	<depends>com.intellij.modules.lang</depends>

	<extensions defaultExtensionNs="com.intellij">
		<!-- Add your extensions here -->
	</extensions>

	<actions>
		<action id="imiatselski.FindInFiles.Editor"
				class="imiatselski.idea_find_in_files_ignoring_whitespaces_plugin.FindInFilesIgnoringWhitespacesAction"
				text="Find in Files Ignoring Whitespaces"
				description="Find in files ignoring whitespaces">
			<add-to-group group-id="EditorPopupMenu" anchor="first"/>
			<add-to-group group-id="Diff.EditorPopupMenu" anchor="first"/>
		</action>
	</actions>

</idea-plugin>